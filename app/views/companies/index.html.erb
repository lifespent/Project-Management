<h1>Listing companies</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Addresstwo</th>
    <th>City</th>
    <th>State</th>
    <th>Postalcode</th>
    <th>Website</th>
    <th>Notes</th>
    <th>Projects</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @companies.each do |company| %>
<% project_querry(company.id) %>
  <tr>
    <td><%= link_to company.name, "/projects/company/#{company.id}" %></td>
	<td><%= company.address %></td>
    <td><%= company.address %></td>
    <td><%= company.addresstwo %></td>
    <td><%= company.city %></td>
    <td><%= company.state %></td>
    <td><%= company.postalcode %></td>
    <td><%= company.website %></td>
    <td><%= company.notes %></td>
	<% if @total == 0 %>
	<td><%= link_to "Create First Project", "/projects/new/#{company.id}" %></td>
	<% else %>
	<td><%= link_to project_querry(company.id), "/projects/company/#{company.id}" %></td>
	<% end %>
    <td><%= link_to 'Show', company %></td>
    <td><%= link_to 'Edit', edit_company_path(company) %></td>
    <td><%= link_to 'Destroy', company, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

